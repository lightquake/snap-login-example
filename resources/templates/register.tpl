<apply template="default">
  <div class="page-header"><h1>Register</h1></div>
  <div class="row">
    <form class="form-stacked">
      <fieldset>
	<div class="clearfix">
	  <label for="username">Username</label>
	  <div class="input">
	    <input name="username" id="username" type="text" />
	  </div>
	</div>
	<div class="clearfix">
	  <label for="username">Password</label>
	  <div class="input">
